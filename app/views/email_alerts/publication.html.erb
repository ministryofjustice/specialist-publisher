<table id="content" style="max-width: 580px; border-collapse: collapse; mso-table-lspace: 0pt; mso-table-rspace: 0pt;">
  <tr>
    <td style="border-collapse: collapse; padding: 0">

      <h1 style="color: #0B0C0C !important; font-family: sans-serif; font-weight: 700; font-size: 36px; line-height: 1.111111111; margin: 15px 0; padding: 15px 0;"><%= human_document_type %></h1>

      <p style="color: #0B0C0C; font-family: sans-serif; font-size: 19px; line-height: 1.315789474; margin: 15px 0;">
        The following <%= document_noun %> has been <%= updated_or_published %>
        <%= document_url %>
      </p>

      <h2 style="color: #0B0C0C !important; font-family: sans-serif; font-weight: 700; font-size: 24px; line-height: 1.111111111; margin: 15px 0; padding: 15px 0;"><%= document_title %></h2>

      <p style="color: #0B0C0C; font-family: sans-serif; font-size: 19px; line-height: 1.315789474; margin: 15px 0;">
        <%= document_summary %>
      </p>

    </td>
  </tr>
</table>
